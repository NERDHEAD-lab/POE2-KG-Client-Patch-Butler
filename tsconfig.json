{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "lib": [
            "es2022",
            "dom"
        ],
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "nodenext",
        "paths": {
            "react-devtools-core": [
                "./src/mocks/devtools.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}